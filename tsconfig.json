{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ESNext",
    "sourceMap": false,
    "outDir": "./build",
    "incremental": false,
    "rootDir": ".",
    "useDefineForClassFields": true,
    "lib": [
      "esnext.asynciterable",
      "dom",
      "ESNext.String",
      "ESNext.Array",
      "ES2019",
      "es2021",
      "ESNext"
    ],
    "importHelpers": true
  }, 
  "exclude": [
    "build",
    "node_modules",
    "out",
    "src/schema.ts",
    "bin",
    "./build/**/*",
    "**/*/*.d.ts",
    "target"
  ]
}